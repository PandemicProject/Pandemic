{
  // 有关 tasks.json 格式的文档，请参见
  // https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++.exe build active file",
      "command": "D:\\files\\mingw\\bin\\g++.exe",
      "args": [
        "-g",
        "${file}",
        "-lgraphics64",
        "-luuid",
        "-lmsimg32",
        "-lgdi32",
        "-limm32",
        "-lole32",
        "-loleaut32",
        "-lwinmm",
        "-mwindows",
        "-LD:\\files\\mingw\\lib",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "D:\\files\\mingw\\bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
